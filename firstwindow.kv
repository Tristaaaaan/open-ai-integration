# First Window
<FirstWindow>:
    name: "first"
    heard_speech: heard_speech
    api_key_ai: api_key_ai
    open_ai_content: open_ai_content
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.50}
        size_hint: .9, .95
        MDTextField:
            id: api_key_ai
            mode: "rectangle"
            font_style: 'Caption'
            hint_text: "    API Key    "
            color_mode: 'custom'
            line_color_focus: 0, 0, 0, 1
            line_color_normal: 0, 0, 0, 1    
        MDCard:
            padding: 20
            elevation: 1
            ScrollView:
                MDTextField:
                    id: heard_speech
                    multiline: True
                    mode: "rectangle"
                    font_style: 'Caption'
                    text: "Inquiry"
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1        
        MDCard:
            padding: 20
            elevation: 1
            ScrollView:
                MDTextField:
                    id: open_ai_content
                    multiline: True
                    disabled: True
                    mode: "rectangle"
                    font_style: 'Caption'
                    text: "Open AI Feedback"
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1        
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            MDIconButton:
                id: rec
                icon: 'record-circle-outline'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: .50
                on_release:
                    root.generate_text()
            MDIconButton:
                id: reset
                icon: 'refresh'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: .50
                on_release:
                    root.clear()
 
